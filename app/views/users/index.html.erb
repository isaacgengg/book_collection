<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<p><%= link_to "Back to Books", books_path %></p>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="<%= dom_id(user) %>">
        <td><%= user.username %></td>
        <td>
          <%= link_to "Show", user_path(user) %> |
          <%= link_to "Edit", edit_user_path(user) %> |
          <%= link_to "Delete", user_path(user),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete #{user.username}?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New user", new_user_path %></p>
